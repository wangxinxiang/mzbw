<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/main_bg"
              android:layout_height="match_parent">

    <include layout="@layout/title_bar" android:id="@+id/accountinfobar"></include>

    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/text_result_orange"
                  android:id="@+id/ll_accountinfo"
                  android:layout_height="@dimen/space_100">
        <ImageView android:layout_width="wrap_content"
                   android:background="@color/transparency"
                   android:src="@drawable/account_icon"
                   android:id="@+id/img_accountinfo_icon"
                   android:layout_margin="@dimen/space_12"
                   android:layout_gravity="center_vertical"
                   android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:textSize="@dimen/text_size16"
                  android:textColor="@color/white"
                  android:id="@+id/tv_accountinfo_id"
                  android:layout_gravity="center_vertical"
                  android:text="我的赚钱宝ID:12345678"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/ll_accountinfo_group"
                  android:layout_height="wrap_content">
    </LinearLayout>

</LinearLayout>