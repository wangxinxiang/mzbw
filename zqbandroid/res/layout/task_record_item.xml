<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_all_item"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView android:layout_width="match_parent" android:layout_height="@dimen/line_height"
        android:background="@color/main_bg" android:id="@+id/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_12"
        android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_icon"
            android:src="@drawable/qcoin_icon"
            android:visibility="gone"
            android:layout_marginRight="@dimen/space_12"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/item_text"
                android:id="@+id/tv_item_title"
                android:text="Q币1个"
                android:visibility="visible"/>


            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_content"
                android:text="兑换时间：2015-08-25"
                android:textColor="@color/text_content"
                android:singleLine="true"
                android:ellipsize="end" />
        </LinearLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_result"
            android:text="处理中"
            android:textColor="@color/text_result_orange"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size18"/>

        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title_image"
            android:id="@+id/btn_arrow"
            android:src="@drawable/btn_entry_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/space_12"
            android:paddingLeft="@dimen/space_7"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>